!!!
%html
  %head
    %title= "Crowbar: #{ controller.action_name }"
    = stylesheet_link_tag 'application.sass'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => "all"
      = javascript_include_tag "html5.js"
    = javascript_include_tag 'jquery.min', 'jquery-ui.min', 'jquery.sparkline.min', 'rails.js', 'codemirror/codemirror.js', 'codemirror/javascript.js', 'jquery.spritely-0.6.1', 'application.js', 'event_helpers.js', 'drag_drop_helpers.js', 'jquery.dataTables'
    = csrf_meta_tag
  
  %body
    %header.navbar.navbar-static-top.navbar-inverse
      .navbar-inner
        .container
          .row-fluid
            .span4
              %a.brand{:href => "/"}
                SUSE Cloud: Crowbar
            .span8
              %nav.mainMenu
                = render_navigation :expand_all => true, :skip_if_empty => true
          
  - if flash[:notice] || !CHEF_ONLINE
    .notice#flash
      .container
        .alert
          = flash[:notice].gsub("\n", "<br/>")
          = link_to " [#{t('clear_msg')}]", "#", :onClick=>"$('#flash').attr('style', 'display:none');"
        - if !CHEF_ONLINE
          %p= t "offline"
    #main.container
      = yield

    %footer
      %a{:href=>"https://www.suse.com/products/suse-cloud/", :target=>"_new", :alt=>"Dell, Inc."}
        SUSE Cloud v2.0
      &nbsp
      =t '.provided_by'
      %a{:href=>"https://www.suse.com", :target=>"_new"}
        SUSE Linux GmbH
      &nbsp
      ="#{CROWBAR_VERSION} Version"
  - else
    #main.container
      = yield

    %footer
      ="Version #{CROWBAR_VERSION}"
